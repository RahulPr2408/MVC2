@model MVC_2.Models.Student

<form method="post" asp-action="Create">
    <input hidden asp-for="student_ID" />
    <div class="border p-3 bg-white">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Create New Student</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="student_Name">Student Name  </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="student_Name" class="form-control" />
                        <span asp-validation-for="student_Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="student_age">Student Age  </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="student_age" class="form-control" />
                        <span asp-validation-for="student_age" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="student_Contact">Student Contact</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="student_Contact" class="form-control" />
                        <span asp-validation-for="student_Contact" class="text-danger"></span>
                    </div>
            
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create Student" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>


@section Scripts{

@{
    <partial name="_ValidationScriptsPartial" />
}

}